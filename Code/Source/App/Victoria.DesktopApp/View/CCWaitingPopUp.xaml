<Window x:Class="Victoria.DesktopApp.View.CCWaitingPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Height="196" Width="393"
        Name="CCPopUp">
    <Border CornerRadius="30" Padding="10" Background="{StaticResource SecondaryColor}" Margin="4,-1,55.333,83">

        <StackPanel Margin="0,0,-5,-5"  >
            <Grid Height="145" Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0.667,49">
                    <TextBlock x:Name="mensaje" TextAlignment="Left" FontSize="15" Foreground="White" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" HorizontalAlignment="Right" Width="252"/>
                </ScrollViewer>
            </Grid>
        </StackPanel>
    </Border>
</Window>
