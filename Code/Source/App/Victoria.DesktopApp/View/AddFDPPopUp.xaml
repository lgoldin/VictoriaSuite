<Window x:Class="Victoria.DesktopApp.View.AddFDPPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Victoria.DesktopApp.View"
        mc:Ignorable="d"
        Title="Generar FDP" 
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"       
        ResizeMode="CanResizeWithGrip"
        Focusable="True" Height="764.275" Width="1028">
    <Grid Margin="-250,-53,-187,-28" HorizontalAlignment="Right" Width="1465" Height="845" VerticalAlignment="Bottom" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border MouseLeftButtonDown="WindowMouseLeftButtonDown" CornerRadius="30" Background="{StaticResource SecondaryColor}"  Padding="0,0,0,0" HorizontalAlignment="Left" Margin="242,149,0,0" Width="1013" Grid.Column="1" Height="666" VerticalAlignment="Top">
            <StackPanel Margin="0,0,0,-17">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Name="btnMinimize"  Background="Transparent" Cursor="Hand" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Left" Click="BtnMinimize_OnClick">
                        <Button.Content>
                            <StackPanel>
                                <Image Source="/Victoria.UI.SharedWPF;Component/resources/minus.png" Height="18" Width="23" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Grid.Column="2" Name="btnClose" Background="Transparent" Cursor="Hand" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Left" Click="BtnClose_OnClick" Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel>
                                <Image Source="/Victoria.UI.SharedWPF;Component/resources/close.png" Height="18" Width="23" RenderTransformOrigin="0.513,-0.022" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Image Source="/Victoria.UI.SharedWPF;Component/resources/corona.png" Width="34" HorizontalAlignment="Center" Margin="0,0,880,0" RenderTransformOrigin="3.821,0.438" />
                    <Label  Content="Generar FDP"  Foreground="White" FontSize="18" HorizontalAlignment="Center"  Width="137" Margin="197,0,155,0.581"/>
                </Grid>
                <Border  Background="White" VerticalAlignment="Center" HorizontalAlignment="Right" MinWidth="550" MinHeight="350" Height="582" Width="1012" Margin="0,0,0.571,0" RenderTransformOrigin="0.376,0.652">

                    <Grid Margin="0,0,2,-80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="72*"/>
                            <ColumnDefinition Width="187*"/>
                            <ColumnDefinition Width="751*"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="label" Content="Origen de datos"  Margin="37,27,121.857,599.714" Grid.ColumnSpan="2"/>


                        <ComboBox x:Name="comboBox"  RenderTransformOrigin="0.497,0.484" Margin="85,27,286.286,608.714" SelectionChanged="comboBox_SelectionChanged" Grid.Column="1" Grid.ColumnSpan="2">
                            <ComboBoxItem x:Name="ArchivoExcel" Content="Archivo Excel" />
                        </ComboBox>

                        <Grid x:Name="Archivo" Grid.ColumnSpan="3" Visibility="Visible" Margin="0,0,0.286,-0.286">
                            <Label x:Name="label_Copy" Content="Archivo" Margin="37,67,879,561"/>
                            <TextBox x:Name="rutaFile"  Margin="160,67,288,567" TextChanged="RutaFile_TextChanged" />

                            <Button x:Name="btnserch" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="180,67,135,567" Width="135"  Click="Btnserch_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="2">
                                <Grid Height="30" Width="130">
                                    <Label Content="Examinar" Height="28" HorizontalAlignment="Left" Width="105" Margin="0,1,2,1" />
                                    <Image Source="/Victoria.UI.SharedWPF;Component/resources/openG.png" HorizontalAlignment="Right" Width="33" Margin="-1,-1,34,1" />
                                </Grid>
                            </Button>

                        </Grid>

                        <Grid x:Name="Posicion_datos" Grid.ColumnSpan="3" Visibility="Visible" Margin="0,0,0.286,-0.286">
                            <Label x:Name="label_posicion_datos" Content="Indique la ubicación de los datos:" Margin="37,109,784.428,517.572"/>
                            <Label x:Name="label_hoja" Content="Hoja" Margin="260,106,711.428,520.572" RenderTransformOrigin="0.46,-0.776"/>
                            <Label x:Name="label_columna" Content="Columna" Margin="413,106,535.428,520.572"/>
                            <Label x:Name="label_fila" Content="Fila Inicial" Margin="584,106,310.428,520.572"/>

                            <TextBox x:Name="txtHoja" PreviewTextInput="NumberValidationTextBox" x:FieldModifier="private" Margin="330,110,629.428,528.572" Width="50" Text="1"/>
                            <TextBox x:Name="txtCol" PreviewTextInput="NumberValidationTextBox"  x:FieldModifier="private" Margin="495,110,464.428,527.572" Width="50" Text="1"/>
                            <TextBox x:Name="txtFila" PreviewTextInput="NumberValidationTextBox"   x:FieldModifier="private" Margin="673,110,286.428,526.572" Width="50" Text="1"/>
                            <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="True" x:Name="dgvDatosFdp" ColumnWidth="*" Visibility="visible" CanUserResizeColumns="True" IsReadOnly="True" ItemsSource="{Binding Source=dataGridRows}" Margin="250,167,509,134" SelectionChanged="DgvDatosFdp_SelectionChanged"/>
                            <Label x:Name="lblVista" Content="Vista" Margin="262,140,705,497" RenderTransformOrigin="0.46,-0.776"></Label>
                            <RadioButton Margin="395,147,0,0" Name="rbIntervalos" HorizontalAlignment="Left" VerticalAlignment="Top" Width="79" Height="15" Background="White" Foreground="Black">
                                Intervalos
                            </RadioButton>
                            <RadioButton Margin="316,147,0,0" Name="rbFecha" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="15" Background="White" Foreground="Black">
                                Fecha
                            </RadioButton>
                            <Button x:Name="btnAddRegister" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,166,785.314,432.686" Width="197"  Click="BtnAddRegister_onClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="62" Width="197" Background="{StaticResource SecondaryColor}">
                                    <Label Content="Agregar registro" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="30" Margin="44,20,44,22"  />
                                </Grid>
                            </Button>
                            <Button x:Name="btnModifyRegister" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,227,785.314,371.686" Width="197"  Click="BtnAddRegister_onClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="62" Width="197" Background="{StaticResource SecondaryColor}">
                                    <Label Content="Modificar registro" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="30" Margin="44,20,44,22"  />
                                </Grid>
                            </Button>
                            <Button x:Name="btnDeleteRegisters" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,287.686,785.314,310.686" Width="197"  Click="BtnAddRegister_onClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="62" Width="197" Background="{StaticResource SecondaryColor}">
                                    <Label Content="Borrar registros" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="30" Margin="44,20,44,22"  />
                                </Grid>
                            </Button>
                            <Button x:Name="btnSelectAll" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,347,785.314,249.686" Width="197"  Click="BtnAddRegister_onClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="62" Width="197" Background="{StaticResource SecondaryColor}">
                                    <Label Content="Seleccionar todo" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="30" Margin="44,20,44,22"  />
                                </Grid>
                            </Button>
                            <Button x:Name="btnFilter" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,409,785.314,190.686" Width="197"  Click="BtnAddRegister_onClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="62" Width="197" Background="{StaticResource SecondaryColor}">
                                    <Label Content="Filtrar registros" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="30" Margin="44,20,44,22"  />
                                </Grid>
                            </Button>
                            <Button x:Name="btnimport" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,106,134,524" Width="135"  Click="Btnimport_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Grid Height="30" Width="130">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="79*"/>
                                        <ColumnDefinition Width="51*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Importar Datos" Height="28" HorizontalAlignment="Left" Width="105" Margin="0,1" Grid.ColumnSpan="2" />
                                    <Image Source="/Victoria.UI.SharedWPF;Component/resources/savev2.png" HorizontalAlignment="Right" Width="33" Margin="0,6,13,5" RenderTransformOrigin="1.184,0.618" Grid.Column="1" />
                                </Grid>
                            </Button>
                        </Grid>

                        <Button x:Name="btnchart" Background="Transparent" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Right" Margin="0,537,43.286,94.714" Width="135"  Click="btnCalcularFDP_OnClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="2">
                            <Grid Height="30" Width="130">
                                <Label Content="Calcular" Height="28" HorizontalAlignment="Left" Width="105" Margin="0,1,2,1" />
                                <Image Source="/Victoria.UI.SharedWPF;Component/resources/flowchart.png" HorizontalAlignment="Right" Width="33" Margin="-1,-1,0,1" />
                            </Grid>
                        </Button>
                    </Grid>
                </Border>


            </StackPanel>
        </Border>
        <Grid x:Name="pnlMoficable" Grid.ColumnSpan="2" Visibility="Visible" Margin="800,353,250.143,129">
            <Border Background="White" BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Height="363" VerticalAlignment="Top"/>
            <Label x:Name="lblAgregarRegistro" Content="Agregar Registro" FontWeight="SemiBold" FontSize="15" Margin="7.714,7.714,275.143,296.143" RenderTransformOrigin="0.46,-0.776" ></Label>
            <RadioButton Margin="19,48,0,0" Name="rbAgregarPorFechaYHora" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" Height="15" Background="White" Foreground="Black">
                Fecha y hora
            </RadioButton>
            <DatePicker Height="25" HorizontalAlignment="Left" Margin="44,68,0,0" Name="datePicker1" VerticalAlignment="Top" Width="226" />
            <xctk:DateTimeUpDown Format="Custom" FormatString="HH:mm:ss " Value="00:00" Margin="44,107,145,231.143" />

            <RadioButton Margin="19,146,0,0" Name="rbAgregarPorIntervalo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="79" Height="15" Background="White" Foreground="Black">
                Intervalo
            </RadioButton>
            <xctk:SingleUpDown Value="0" Margin="44,166,303,170.143" />
            <ComboBox x:Name="comboBox_Intervalo"  RenderTransformOrigin="0.497,0.484" Margin="193,166,56,170.143" SelectionChanged="comboBoxIntervalo_SelectionChanged">
                <ComboBoxItem x:Name="Segundos" Content="Segundos" />
                <ComboBoxItem x:Name="Minutos" Content="Minutos" />
                <ComboBoxItem x:Name="Horas" Content="Horas" />
                <ComboBoxItem x:Name="Dias" Content="Dias" />
            </ComboBox>
            <xctk:CheckListBox Name="CheckListBoxFiltros" Margin="33,234,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="51" Width="164" />
            <Label x:Name="lblFiltrosAplicados" Content="Filtros aplicados" FontWeight="Normal" FontSize="15" Margin="10,199,272.857,104.857" RenderTransformOrigin="0.46,-0.776" ></Label>
            <Label x:Name="lblMetodologia" Content="Metodología" FontWeight="SemiBold" FontSize="15" Margin="10,290,272.857,13.857" RenderTransformOrigin="0.46,-0.776" ></Label>
            <RadioButton Margin="132,300,0,0" Name="rbdeltaTConstante" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Height="15" Background="White" Foreground="Black">
                Δt constante
            </RadioButton>
            <RadioButton Margin="257,300,0,0" Name="rbEventoAEvento" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Height="15" Background="White" Foreground="Black">
                Evento a evento
            </RadioButton>
            <RadioButton Margin="132,335,0,0" Name="rbDia" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="15" Background="White" Foreground="Black">
                dia
            </RadioButton>
            <RadioButton Margin="188,335,0,0" Name="rbHora" HorizontalAlignment="Left" VerticalAlignment="Top" Width="59" Height="15" Background="White" Foreground="Black" RenderTransformOrigin="0.107,0.533">
                Hora
            </RadioButton>
            <RadioButton Margin="252,335,0,0" Name="rbMinuto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="59" Height="15" Background="White" Foreground="Black" RenderTransformOrigin="0.107,0.533">
                Minuto
            </RadioButton>
            <RadioButton Margin="321,335,0,0" Name="rbSegundo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="71" Height="15" Background="White" Foreground="Black" RenderTransformOrigin="0.107,0.533">
                Segundo
            </RadioButton>


        </Grid>

    </Grid>
</Window>
